<link rel="stylesheet" type="text/css" href="/assets/css/sign_up.css">

<div id="formContainer">
    <form id="signUpForm" action="/signup" method="POST">
        <span id="heading">Welcome! <span id="user"> </span></span>

        <div class="inputContainer">
            <label for="name">Name</label><br/>
            <input id="name" type="string" name="name" placeholder="Your Name" required/>
        </div>
        <div class="inputContainer">
            <label id="email" for="name">Email</label><br/>
            <input type="email" name="email" required placeholder="ex@gmail.com"/>
        </div>
        <div class="inputContainer">
            <label for="name">Password</label><br/>
            <input id="password" type="password" name="password" 
            placeholder="Password" required/>    
        </div>
        
        <button type="submit">Create Account</button>

        <span id="login">Already have an account? <a href="/signin">Login</a></span>
    </form>
</div>

<script>
    document.getElementById('name').addEventListener('input',(e)=>{
        document.getElementById('user').innerHTML=e.target.value;
        
    })
</script>